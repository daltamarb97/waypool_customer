<?xml version='1.0' encoding='utf-8'?>
<widget id="com.waypoolsas.waypooluser" version="3.0.8" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Waypool</name>
    <description>carsharing app</description>
    <author email="team@waypooltech.com" href="https://waypooltech.com/">Waypool SAS</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="GOOGLE_MAPS_ANDROID_API_KEY" />
    <config-file parent="NSLocationWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
        <string>Usado para conectarte con otros usuarios de Waypool y asi brindarte un mejor servicio</string>
    </config-file>
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>Necesitamos acceso a tu camara para que nos puedas enviar tus fotos de documentos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>Accedemos a tus imagenes para que sea más fácil para ti mandarnos tu documentos</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
        <string>Usado para conectarte con otros usuarios de Waypool y asi brindarte un mejor servicio</string>
    </edit-config>
    <resource-file src="google-services.json" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="cordova.plugins.diagnostic.modules" value="LOCATION" />
    <preference name="phonegap-version" value="cli-6.4.0" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="30000" />
    <preference name="ShowSplashScreen" value="true" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="orientation" value="portrait" />
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation" />
    </feature>
</widget>
